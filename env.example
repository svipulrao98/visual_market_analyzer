# Database
DATABASE_URL=postgresql://trading_user:secure_password_123@timescaledb:5432/trading_data
POSTGRES_USER=trading_user
POSTGRES_PASSWORD=secure_password_123
POSTGRES_DB=trading_data

# Redis
REDIS_URL=redis://redis:6379

# Broker Configuration (kite or fyers)
BROKER=kite

# Kite API Credentials
# Option 1: Manual token (requires daily update)
KITE_API_KEY=your_kite_api_key_here
KITE_ACCESS_TOKEN=your_kite_access_token_here

# Option 2: Auto-authentication (recommended)
# Provide these for automatic token generation
# Leave KITE_ACCESS_TOKEN empty to enable auto-auth
KITE_API_SECRET=your_kite_api_secret_here
KITE_USERNAME=your_zerodha_user_id
KITE_PASSWORD=your_zerodha_password
KITE_TOTP_KEY=your_totp_secret_key

# Fyers API Credentials
FYERS_APP_ID=your_fyers_app_id_here
FYERS_ACCESS_TOKEN=your_fyers_access_token_here

# Application Settings
LOG_LEVEL=INFO
TICK_BUFFER_SIZE=1000
FLUSH_INTERVAL_SECONDS=1

# Grafana
GF_SECURITY_ADMIN_PASSWORD=admin
